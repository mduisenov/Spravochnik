<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <bitmap android:src="@drawable/ic_white_fab" />
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:src="@drawable/ic_white_fab" />
            </item>
            <item android:left="4.0dip" android:top="1.0dip" android:right="4.0dip" android:bottom="5.0dip">
                <shape android:shape="oval">
                    <solid android:color="@color/dark_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>